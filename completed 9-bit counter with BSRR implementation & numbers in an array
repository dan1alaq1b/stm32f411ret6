/* Working 9-bit Up & Down Counter */
/* attempting to add delay to fix bouncing (doesnâ€™t work yet) */

#include "main.h"
/* Private variables ---------------------------------------------------------*/
uint8_t number;
/*
uint16_t zero = 0xCC;			//hexadecimal
uint16_t one = 0b1011111101;	//binary	(PA0 as LSB; PA9 as MSB)
uint16_t two = 0b0000000000;
uint16_t three = 0xF4;
uint16_t four = 0x2E5;
uint16_t five = 0x1E4;
uint16_t six = 0x1C4;
uint16_t seven = 0xFD;
uint16_t eight = 0xC4;
uint16_t nine = 0xE4;
*/
int bicounter[] = {0b0000001100110011<<16,0b0000000100000010<<16,0b0000001001010011<<16,0b0000001101000011<<16,0b0000000101100010<<16,0b0000001101100001<<16,0b0000001101110001<<16,0b0000000100000011<<16,0b0000001101110011<<16,0b0000001101100011<<16};

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
void HAL_SYSTICK_Callback(void);

/* Interrupt Callback --------------------------------------------------------*/
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
  /* Prevent unused argument(s) compilation warning */
  UNUSED(GPIO_Pin);

  if(GPIO_Pin == Button_A_Pin){					//up counter
	  //number >= 0;
	  number++;
	  if(number > 9){ // < 0
		  number = 0;  // = 9
	  }
  }
  else if(GPIO_Pin == Button_B_Pin){			//down counter
	  /*HAL_Delay(50);
	  if(GPIO_Pin == Button_B_Pin){
  	  //for(number=9; number>=0 ;number--){  //number=9*/
  	  if(number == 0){
  		  //HAL_Delay(50);
  		  //if(GPIO_Pin == Button_B_Pin){
  		  number = 10;
  	  }
	  number--;
  	  if(number < 0){ // < 0
  		  number = 9;  // = 9
  	  }
	  //}
  	  //number--;
    }//HAL_Delay(50);
}

